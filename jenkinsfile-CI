pipeline {
    agent any
    tools {
        jdk 'jdk_21'
        nodejs 'node_24'
    }

    parameters {
        string(name: 'GIT_URL', defaultValue: 'https://github.com/ayushukla02/        git remote set-url origin https://github.com/ayushukla02/DevSecOps-Netflix_clone.git.git', description: 'Git repository URL')
        string(name: 'GIT_BRANCH', defaultValue: 'main', description: 'Git branch to check out')
        string(name: 'DOCKER_USER', defaultValue: 'ayushukla02', description: 'Docker Hub username')
        string(name: 'IMAGE_NAME', defaultValue: 'netflix-clone', description: 'Name of the image')
    }

    environment {
        SCANNER_HOME = tool 'sonar-scanner'
        IMAGE_TAG = "${env.BUILD_NUMBER}"
        FULL_IMAGE_NAME = "${params.DOCKER_USER}/${params.IMAGE_NAME}:${IMAGE_TAG}"
        CONTAINER_NAME = "${params.IMAGE_NAME}-${IMAGE_TAG}"
    }

    stages {
        stage('Clean Workspace') {
            steps {
                echo "Cleaning workspace..."
                cleanWs()
            }
        }

        stage('Checkout from Git') {
            steps {
                echo "Checking out ${params.GIT_URL} (Branch: ${params.GIT_BRANCH})"
                git branch: params.GIT_BRANCH, url: params.GIT_URL
            }
        }

        stage("Sonarqube Analysis") {
            steps {
                echo "Running SonarQube analysis..."
                withSonarQubeEnv('SonarQube') {
                    sh ''' $SCANNER_HOME/bin/sonar-scanner -Dsonar.projectName=${params.IMAGE_NAME} \
                         -Dsonar.projectKey=${params.IMAGE_NAME} '''
                }
            }
        }

        stage("Quality Gate") {
            steps {
                echo "Waiting for SonarQube quality gate..."
                script {
                    timeout(time: 1, unit: 'HOURS') {
                        // Using 'credentialsId' implies 'Sonar-token' is set in Jenkins
                        waitForQualityGate abortPipeline: true, credentialsId: 'Sonar-token'
                    }
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                echo "Installing NPM dependencies..."
                sh "npm ci"
            }
        }

        stage('OWASP Dependency-Check Scan') {
            steps {
                echo "Running OWASP dependency scan..."
                withCredentials([string(credentialsId: 'NVD_API_KEY', variable: 'NVD_API_KEY_VAR')]) {
                    dependencyCheck additionalArguments: "--scan ./ --disableYarnAudit --disableNodeAudit --nvdApiKey ${NVD_API_KEY_VAR}", odcInstallation: 'DP-Check'
                    dependencyCheckPublisher pattern: '**/dependency-check-report.xml'
                }
            }
        }

        stage('Trivy Filesystem Scan') {
            steps {
                echo "Running Trivy filesystem scan..."
                // Added --exit-code 0 to not fail the build here, we can review the report
                sh "trivy fs --exit-code 0 --format table . > trivyfs.txt"
            }
        }

        stage("Docker Build & Push") {
            steps {
                echo "Building and pushing image: ${FULL_IMAGE_NAME}"
                script {
                    withCredentials([string(credentialsId: 'tmdb-api-key', variable: 'TMDB_API_KEY_SECRET')]) {
                        withDockerRegistry(credentialsId: 'docker', toolName: 'docker') {

                            sh "docker build --build-arg TMDB_V3_API_KEY=${TMDB_API_KEY_SECRET} -t ${FULL_IMAGE_NAME} ."
                                                    
                            sh "docker push ${FULL_IMAGE_NAME}"
                        }
                    }
                }
            }
        }

        stage("Trivy Image Scan") {
            steps {
                echo "Running Trivy scan on image: ${FULL_IMAGE_NAME}"
                sh "trivy image --exit-code 0 ${FULL_IMAGE_NAME} > trivyimage.txt"
            }
        }

        stage('Deploy Test Container') {
            steps {
                echo "Deploying container ${CONTAINER_NAME}..."
                sh "docker run -d --name ${CONTAINER_NAME} -p 8081:80 ${FULL_IMAGE_NAME}"
            }
        }
    }

    post {
        always {
            script {
                echo "Cleaning up Docker container..."
                // true' prevents the pipeline from failing
                sh "docker stop ${CONTAINER_NAME} || true"
                sh "docker rm ${CONTAINER_NAME} || true"
            }
            
            echo "Sending email notification..."
            emailext attachLog: true,
                subject: "'${currentBuild.result}'",
                body: "Project: ${env.JOB_NAME}<br/>" +
                      "Build Number: ${env.BUILD_NUMBER}<br/>" +
                      "URL: ${env.BUILD_URL}<br/>",
                to: 'ayush.paradox75@gmail.com',
                attachmentsPattern: 'trivyfs.txt,trivyimage.txt'
        }
    }
}
